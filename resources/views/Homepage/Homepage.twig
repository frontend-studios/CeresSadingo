{% extends 'Ceres::Homepage.Homepage' %}

{% set homepageSliderImg1  = config("CeresSadingo.homepage.homepageSliderImg1") %}
{% set homepageSliderImg2  = config("CeresSadingo.homepage.homepageSliderImg2") %}
{% set homepageSliderImg3  = config("CeresSadingo.homepage.homepageSliderImg3") %}

{% set homepageBannerLink  = config("CeresSadingo.homepage.homepageBannerLink") %}
{% set homepageBannerText  = config("CeresSadingo.homepage.homepageBannerText") %}

{% set homepageTitle  = config("CeresSadingo.homepage.homepageTitle") %}
{% set homepageTitleText  = config("CeresSadingo.homepage.homepageTitleText") %}

{% set homepageTopLeftLink  = config("CeresSadingo.homepage.homepageTopLeftLink") %}
{% set homepageTopLeftImg  = config("CeresSadingo.homepage.homepageTopLeftImg") %}
{% set homepageTopLeftText  = config("CeresSadingo.homepage.homepageTopLeftText") %}

{% set homepageTopRightLink  = config("CeresSadingo.homepage.homepageTopRightLink") %}
{% set homepageTopRightImg  = config("CeresSadingo.homepage.homepageTopRightImg") %}
{% set homepageTopRightText  = config("CeresSadingo.homepage.homepageTopRightText") %}

{% set homepageTitleKategories  = config("CeresSadingo.homepage.homepageTitleKategories") %}
{% set homepageCategoriePerlenparadies  = config("CeresSadingo.homepage.homepagePerlenparadies") %}
{% set homepageCategoriePerlenparadiesText  = config("CeresSadingo.homepage.homepagePerlenparadiesText") %}
{% set homepageCategorieSchmuckmaterial  = config("CeresSadingo.homepage.homepageSchmuckmaterial") %}
{% set homepageCategorieSchmuckmaterialText  = config("CeresSadingo.homepage.homepageSchmuckmaterialText") %}
{% set homepageCategorieBastelnKreatives  = config("CeresSadingo.homepage.homepageBastelnKreatives") %}
{% set homepageCategorieBastelnKreativesText  = config("CeresSadingo.homepage.homepageBastelnKreativesText") %}
{% set homepageCategorieSchmuckstuecke  = config("CeresSadingo.homepage.homepageSchmuckstuecke") %}
{% set homepageCategorieSchmuckstueckeText  = config("CeresSadingo.homepage.homepageSchmuckstueckeText") %}

{% set homepageTopsellerId = config("CeresDark.homepage.homepageTopsellerId") %}
{% set paginatedResultTop      = services.itemLoader.loadForTemplate('Ceres::ItemList.ItemListView', itemLoaderPresets.categoryList, {'categoryId':homepageTopsellerId, 'page':1, 'items':4, 'facets': facetParams, 'sorting': itemSort}) %}
{% set itemListTop             = paginatedResultNew.documents %}

{% block ThemeHomepage %}

<div id="carouselExampleIndicators" class="carousel slide homepage_carousel" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <img class="d-block img-fluid" src="{{ homepageSliderImg1 }}" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block img-fluid" src="{{ homepageSliderImg2 }}" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block img-fluid" src="{{ homepageSliderImg3 }}" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="main_container container-max page-content"><!--Anfang des Containers-->
    <div class="container main_pagecontent">
      <div class="homepage_row homepage_row-title">
        <h2> {{ homepageTitle }} </h2>
        <p>
          {{ homepageTitleText }}
        </p>
      </div>
      <div class="homepage_sale-row">
        <div class="homepage_row row">
          <div class="col-xs-6">
            <div class="prop-xs-6-4 prop-md-3-1">
              <div class="prop-inner">
                <a class="featured-sale-new" href="{{ homepageTopLeftLink }}">
                  <img src="{{ homepageTopLeftImg }}" alt="New">
                  <div class="featured-category-inner">
                    <h4 class="featured-category-headline">
                      <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                      {{ homepageTopLeftText }}
                    </h4>
                  </div>
                </a>
              </div>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="prop-xs-6-4 prop-md-3-1">
              <div class="prop-inner">
                <a class="featured-sale-new" href="{{ homepageTopRightLink }}">
                  <img src="{{ homepageTopRightImg }}" alt="Sale">
                  <div class="featured-category-inner">
                    <h4 class="featured-category-headline">
                    <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                      {{ homepageTopRightText }}
                    </h4>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="homepage_row row">
        <h3 class="homepage_row-titletext">{{ homepageTitleKategories }}</h3>
        <div class="col-md-3">
          <div class="homepage_card card" style="width: 20rem;">
            <a href="/perlenparadies"><img class="homepage_card_img card-img-top" src="{{ homepageCategoriePerlenparadies }}" alt="Perlenparadies"></a>
            <div class="homepage_card-block card-block">
              <h4 class="card-title">Perlenparadies</h4>
              <p class="card-text"> {{ homepageCategoriePerlenparadiesText }} </p></br>
              <a href="/perlenparadies" class="btn btn-outline-primary">Entdecken</a>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="homepage_card card" style="width: 20rem;">
            <a href="/schmuckmaterial"><img class="homepage_card_img card-img-top" src="{{ homepageCategorieSchmuckmaterial }}" alt="Schmuckmaterial"></a>
            <div class="homepage_card-block card-block">
              <h4 class="card-title">Schmuckmaterial</h4>
              <p class="card-text"> {{ homepageCategorieSchmuckmaterialText }}</p>
              <a href="/schmuckmaterial" class="btn btn-outline-primary">Entdecken</a>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="homepage_card card" style="width: 20rem;">
            <a href="/basteln-kreatives"><img class="homepage_card_img card-img-top" src="{{ homepageCategorieBastelnKreatives }}" alt="Basteln & Kreatives"></a>
            <div class="homepage_card-block card-block">
              <h4 class="card-title">Basteln & Kreatives</h4>
              <p class="card-text"> {{ homepageCategorieBastelnKreativesText }} </p></br>
              <a href="/basteln-kreatives" class="btn btn-outline-primary">Entdecken</a>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="homepage_card card" style="width: 20rem;">
            <a href="/schmuckstuecke"><img class="homepage_card_img card-img-top" src="{{ homepageCategorieSchmuckstuecke }}" alt="Schmuckstücke"></a>
            <div class="homepage_card-block card-block">
              <h4 class="card-title">Schmuckstücke</h4>
              <p class="card-text"> {{ homepageCategorieSchmuckstueckeText }} </p></br>
              <a href="/schmuckstuecke" class="btn btn-outline-primary">Entdecken</a>
            </div>
          </div>
        </div>
      </div>
      <div class="homepage_row row">
        <h3 class="homepage_row-titletext" >Besuche uns auf Facebook und Instagram</h3>
        <div class="col-md-6">
          <a href="https://de-de.facebook.com/sadingoShopping/">
            <div class="homepage_facebook"><p>Facebook</p></div>
          </a>
        </div>
        <div class="col-md-6">
          <a href="https://www.instagram.com/sadingoshopping/">
            <div class="homepage_instagram"><p>Instagram</p></div>
          </a>
        </div>
      </div>
      <!-- crosssell start -->
      <div class="homepage_row row">
          <div class="col-xs-12">
             <ul class="product-list row grid">
                  {% for item in itemListTop %}
                      <li class="col-xs-12 col-sm-6 col-md-3">
                          {% include "Ceres::Category.Item.Partials.CategoryListItem" with { 'item': item } %}
                      </li>
                  {% endfor %}
              </ul>
          </div>
      </div>
    </div>
</div><!--Ende des Containers-->
{% endblock %}
