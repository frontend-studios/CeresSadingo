{% extends 'Ceres::Homepage.Homepage' %}


{% block ThemeHomepage %}
<div class="main_container_slider container-max page-content"><!--Anfang des Containers-->

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
          <img class="d-block img-fluid" src="https://www.sadingo.de/images/gallery/Startseite/sliderVorschau3.png" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block img-fluid" src="https://www.sadingo.de/images/gallery/Startseite/sliderVorschau4.png" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block img-fluid" src="https://www.sadingo.de/images/gallery/Startseite/sliderVorschau2.png" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <div class="container main_pagecontent">
      <h4>Kategorien</h4>
      <div class="row">
        <div class="col-md-4">
          <div class="homepage_card card" style="width: 20rem;">
            <img class="homepage_card_img card-img-top" src="..." alt="Card image cap">
            <div class="homepage_card-block card-block">
              <h4 class="card-title">Perlenparadies</h4>
              <p class="card-text">Entdecke im Perlenpadadies unsere Auswahl an verschiedenen Perlen.</p>
              <a href="#" class="btn btn-primary">Entdecken</a>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="homepage_card card" style="width: 20rem;">
            <img class="homepage_card_img card-img-top" src="..." alt="Card image cap">
            <div class="homepage_card-block card-block">
              <h4 class="card-title">Schmuckmaterial</h4>
              <p class="card-text">Suchst du Anhänger, Bänder oder auch Verschlüsse? Hier findest du was du suchst!</p>
              <a href="#" class="btn btn-primary">Entdecken</a>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="homepage_card card" style="width: 20rem;">
            <img class="homepage_card_img card-img-top" src="..." alt="Card image cap">
            <div class="homepage_card-block card-block">
              <h4 class="card-title">Basteln & Kreatives</h4>
              <p class="card-text">Bastelst du gerne? Dann schau hier rein!</p>
              <a href="#" class="btn btn-primary">Entdecken</a>
            </div>
          </div>
        </div>
      </div>
    </div>

</div><!--Ende des Containers-->
{% endblock %}
